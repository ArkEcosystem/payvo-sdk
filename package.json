{
	"name": "platform-sdk",
	"private": true,
	"description": "Cross-Platform Utilities for ARK Applications",
	"scripts": {
		"build": "ultra -r build",
		"build:release": "NODE_ENV=production bash scripts/build-release.sh && bash scripts/publish.sh",
		"build:release:next": "NODE_ENV=production bash scripts/build-release.sh && bash scripts/publish-next.sh",
		"clean": "ultra -r clean",
		"lint": "bash scripts/lint.sh",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./packages/**/*.{ts,js,json,md}\"",
		"rebuild": "ultra -r rebuild",
		"sort-package-json": "sort-package-json package.json && sort-package-json packages/**/package.json",
		"test": "ultra -r test"
	},
	"dependencies": {
		"@babel/core": "^7.16.7",
		"@babel/plugin-proposal-class-properties": "^7.16.7",
		"@babel/plugin-transform-runtime": "^7.16.7",
		"@babel/preset-env": "^7.16.7",
		"@babel/preset-typescript": "^7.16.7",
		"@babel/runtime": "^7.16.7",
		"@types/eslint": "^8.2.1",
		"@types/eslint-plugin-prettier": "^3.1.0",
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"babel-loader": "^8.2.3",
		"big-integer": "^1.6.51",
		"c8": "~7.11.0",
		"eslint": "^8.6.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-sonarjs": "^0.11.0",
		"eslint-plugin-sort-keys-fix": "^1.1.2",
		"eslint-plugin-testcafe": "^0.2.1",
		"eslint-plugin-testing-library": "^5.0.1",
		"eslint-plugin-unicorn": "^40.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"node-polyfill-webpack-plugin": "^1.1.4",
		"prettier": "^2.5.1",
		"resolve-typescript-plugin": "^1.1.1",
		"rimraf": "^3.0.2",
		"sort-package-json": "^1.53.1",
		"ts-loader": "^9.2.6",
		"ts-morph": "^13.0.2",
		"tsm": "^2.2.1",
		"typescript": "^4.5.4",
		"ultra-runner": "^3.10.5",
		"uvu": "^0.5.2",
		"watchlist": "~0.3.1",
		"webpack": "^5.65.0",
		"webpack-bundle-analyzer": "^4.5.0",
		"webpack-cli": "^4.9.1"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"engineStrict": true
}
