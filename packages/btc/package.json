{
	"name": "@payvo/sdk-btc",
	"version": "4.0.0-next.10",
	"description": "Cross-Platform Utilities for Payvo Applications",
	"license": "MIT",
	"contributors": [],
	"type": "module",
	"exports": "./distribution/index.js",
	"types": "./distribution/index.d.ts",
	"files": [
		"/distribution"
	],
	"scripts": {
		"build": "pnpm run clean && tsc",
		"build:release": "webpack --config ../../webpack.config.cjs",
		"build:watch": "pnpm run clean && tsc -w",
		"clean": "rimraf .coverage distribution tmp",
		"release": "pnpm publish --access=public",
		"release:next": "pnpm publish --access=public --publish-branch=develop --tag=next",
		"test": "uvu -r tsm source .test.ts",
		"test:coverage": "c8 pnpm run test",
		"test:integration": "uvu -r tsm test .test.ts",
		"test:watch": "watchlist source -- pnpm run test"
	},
	"dependencies": {
		"@ledgerhq/hw-app-btc": "^6.15.1",
		"@payvo/sdk": "workspace:*",
		"@payvo/sdk-cryptography": "workspace:*",
		"@payvo/sdk-helpers": "workspace:*",
		"@payvo/sdk-intl": "workspace:*",
		"bignumber.js": "^9.0.1",
		"bitcoinjs-lib": "^6.0.0",
		"bitcoinjs-message": "^2.2.0",
		"coinselect": "^3.1.12",
		"create-xpub": "^2.1.0",
		"ecpair": "^1.0.1",
		"xpub-converter": "^1.0.2"
	},
	"devDependencies": {
		"@ledgerhq/hw-transport-mocker": "^6.11.2",
		"@ledgerhq/logs": "^6.10.0",
		"@payvo/sdk-http-fetch": "workspace:*",
		"@payvo/sdk-test": "workspace:*",
		"@types/create-xpub": "^2.1.1",
		"@types/node": "^16.11.10",
		"got": "^11.8.3"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"engineStrict": true
}
