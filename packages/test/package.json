{
	"name": "@payvo/sdk-test",
	"version": "3.2.2",
	"description": "Cross-Platform Utilities for Payvo Applications",
	"license": "MIT",
	"contributors": [],
	"type": "module",
	"exports": "./distribution/index.js",
	"types": "./distribution/index.d.ts",
	"files": [
		"/distribution"
	],
	"scripts": {
		"build": "pnpm run clean && tsc",
		"build:watch": "pnpm run clean && tsc -w",
		"clean": "rimraf .coverage distribution tmp",
		"lint": "eslint source/**/*.ts --fix",
		"lint:tests": "eslint source/**/*.test.ts --fix",
		"prepublishOnly": "pnpm run build",
		"test": "uvu -r tsm source .test.js",
		"test:coverage": "c8 pnpm run test",
		"test:watch": "watchlist source -- pnpm run test"
	},
	"dependencies": {
		"c8": "~7.10.0",
		"nock": "^13.2.0",
		"sinon": "^12.0.1",
		"tsm": "^2.1.4",
		"uvu": "^0.5.2",
		"watchlist": "~0.3.1",
		"zod": "~3.11.6"
	},
	"devDependencies": {
		"@types/node": "^16.11.7"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"engineStrict": true
}
