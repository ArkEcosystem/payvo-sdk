{
	"name": "@payvo/sdk-dot",
	"version": "3.1.0",
	"description": "Cross-Platform Utilities for ARK Applications",
	"license": "MIT",
	"contributors": [],
	"main": "distribution/index.js",
	"unpkg": "distribution/index.umd.min.js",
	"module": "distribution/index.min.mjs",
	"types": "distribution/index.d.ts",
	"files": [
		"/distribution"
	],
	"scripts": {
		"build": "pnpm run clean && tsc",
		"bundle:esm": "rollup distribution/index.js --file distribution/index.mjs --format esm",
		"bundle:esm:min": "terser --ecma 2019 --compress --mangle --module -o distribution/index.min.mjs -- distribution/index.mjs && gzip -9 -c distribution/index.min.mjs > distribution/index.min.mjs.gz",
		"bundle:umd": "rollup distribution/index.js --file distribution/index.umd.js --format umd",
		"bundle:umd:min": "terser --ecma 2019 --compress --mangle -o distribution/index.umd.min.js -- distribution/index.umd.js && gzip -9 -c distribution/index.umd.min.js > distribution/index.umd.min.js.gz",
		"clean": "rimraf .coverage distribution tmp",
		"format": "pnpm run lint && pnpm run prettier",
		"lint": "eslint source/**/*.ts --fix",
		"lint:tests": "eslint source/**/*.test.ts --fix",
		"prepublishOnly": "pnpm run clean && tsc && pnpm run bundle:esm && pnpm run bundle:esm:min && pnpm run bundle:umd && pnpm run bundle:umd:min",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit",
		"test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit --watchAll"
	},
	"jest": {
		"preset": "../../jest.config.js"
	},
	"dependencies": {
		"@payvo/sdk": "workspace:*",
		"@payvo/sdk-cryptography": "workspace:*",
		"@payvo/sdk-helpers": "workspace:*",
		"@payvo/sdk-intl": "workspace:*",
		"@polkadot/api": "^6.8.1",
		"@polkadot/keyring": "^7.8.2",
		"@polkadot/rpc-provider": "^6.8.1",
		"@polkadot/util": "^7.8.2",
		"@polkadot/util-crypto": "^7.8.2",
		"@polkadot/wasm-crypto": "^4.2.1",
		"@polkadot/x-global": "^7.8.2",
		"@polkadot/x-randomvalues": "^7.8.2",
		"@zondax/ledger-polkadot": "^0.13.0"
	},
	"devDependencies": {
		"@jest/globals": "^27.3.1",
		"@ledgerhq/hw-transport-mocker": "^6.11.2",
		"@payvo/sdk-http-fetch": "workspace:*",
		"@types/eslint": "^7.28.2",
		"@types/eslint-plugin-prettier": "^3.1.0",
		"@types/hapi__joi": "17.1.7",
		"@types/jest": "^27.0.2",
		"@types/node": "^16.11.7",
		"@types/prettier": "^2.4.1",
		"@types/rimraf": "^3.0.2",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.2.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-nibble": "^7.0.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jest": "^25.2.4",
		"eslint-plugin-jest-formatting": "^3.0.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^5.1.1",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-sonarjs": "^0.10.0",
		"eslint-plugin-sort-keys-fix": "^1.1.2",
		"eslint-plugin-testcafe": "^0.2.1",
		"eslint-plugin-testing-library": "^5.0.0",
		"eslint-plugin-unicorn": "^38.0.1",
		"eslint-plugin-unused-imports": "^2.0.0",
		"got": "^11.8.2",
		"jest": "^27.3.1",
		"jest-extended": "^1.1.0",
		"jest-localstorage-mock": "^2.4.18",
		"nock": "^13.2.0",
		"npm-check-updates": "^12.0.2",
		"prettier": "^2.4.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.59.0",
		"terser": "^5.9.0",
		"ts-jest": "^27.0.7",
		"typescript": "^4.4.4"
	},
	"engines": {
		"node": ">=12.x"
	}
}
