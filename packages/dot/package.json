{
    "name": "@payvo/sdk-dot",
    "version": "4.0.0-next.16",
    "description": "Cross-Platform Utilities for Payvo Applications",
    "license": "MIT",
    "contributors": [],
    "type": "module",
    "exports": "./distribution/index.js",
    "types": "./distribution/index.d.ts",
    "files": [
        "/distribution"
    ],
    "scripts": {
        "build": "pnpm run clean && tsc",
        "build:release": "webpack --config ../../webpack.config.cjs",
        "build:analyze": "webpack --config ../../webpack.analyze.cjs",
        "build:watch": "pnpm run clean && tsc -w",
        "clean": "rimraf .coverage distribution tmp",
        "test": "uvu -r tsm source .test.ts",
        "test:coverage": "c8 pnpm run test",
        "test:watch": "watchlist source -- pnpm run test"
    },
    "dependencies": {
        "@payvo/sdk": "workspace:*",
        "@payvo/sdk-cryptography": "workspace:*",
        "@payvo/sdk-helpers": "workspace:*",
        "@payvo/sdk-intl": "workspace:*",
        "@polkadot/api": "^6.9.2",
        "@polkadot/keyring": "^7.9.2",
        "@polkadot/rpc-provider": "^6.9.2",
        "@polkadot/util": "^7.9.2",
        "@polkadot/util-crypto": "^7.9.2",
        "@polkadot/wasm-crypto": "^4.4.1",
        "@polkadot/x-randomvalues": "^7.9.2",
        "@zondax/ledger-polkadot": "^0.13.0"
    },
    "devDependencies": {
        "@ledgerhq/hw-transport-mocker": "^6.11.2",
        "@payvo/sdk-http-fetch": "workspace:*",
        "@payvo/sdk-test": "workspace:*",
        "@types/node": "^16.11.10"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "engineStrict": true
}
