{
	"name": "@payvo/sdk-cryptography",
	"version": "3.2.2",
	"description": "Cross-Platform Utilities for Payvo Applications",
	"license": "MIT",
	"contributors": [],
	"type": "module",
	"exports": {
		".": {
			"import": "./distribution/esm/index.js",
			"require": "./distribution/cjs/index.js"
		}
	},
	"main": "./distribution/cjs/index.js",
	"module": "./distribution/esm/index.js",
	"types": "./distribution/esm/index.d.ts",
	"files": [
		"/distribution"
	],
	"scripts": {
		"build": "pnpm run build:esm",
		"build:cjs": "tsc -p tsconfig.cjs.json",
		"build:esm": "tsc -p tsconfig.json",
		"build:npm": "pnpm run clean && pnpm run build:esm && pnpm run build:cjs && bash ../../scripts/create-package-json.sh",
		"build:watch": "pnpm run clean && tsc -p tsconfig.json -w",
		"clean": "rimraf .coverage distribution tmp",
		"lint": "eslint source/**/*.ts --fix",
		"lint:tests": "eslint source/**/*.test.ts --fix",
		"prepublishOnly": "pnpm run build:npm",
		"test": "uvu -r tsm source .test.js",
		"test:coverage": "c8 pnpm run test",
		"test:watch": "watchlist source -- pnpm run test"
	},
	"dependencies": {
		"argon2-browser": "^1.18.0",
		"bcryptjs": "^2.4.3",
		"bcrypto": "^5.4.0",
		"bip32": "^3.0.0",
		"bip38": "^3.1.1",
		"bip39": "^3.0.4",
		"bstring": "^0.3.9",
		"create-xpub": "^2.1.0",
		"hdkey": "^2.0.1",
		"node-forge": "^0.10.0",
		"safe-buffer": "^5.2.1",
		"string-crypto": "^2.0.2",
		"tiny-secp256k1": "^1.0.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@payvo/sdk-test": "workspace:*",
		"@sindresorhus/tsconfig": "^2.0.0",
		"@types/argon2-browser": "1.18.1",
		"@types/bcryptjs": "2.4.2",
		"@types/bent": "^7.3.2",
		"@types/bip38": "2.0.1",
		"@types/eslint": "^7.28.2",
		"@types/eslint-plugin-prettier": "^3.1.0",
		"@types/hapi__joi": "17.1.7",
		"@types/node": "^16.11.7",
		"@types/node-forge": "0.10.9",
		"@types/prettier": "^2.4.1",
		"@types/rimraf": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"benchmark": "^2.1.4",
		"c8": "~7.10.0",
		"eslint": "^8.2.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^5.1.1",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-sonarjs": "^0.10.0",
		"eslint-plugin-sort-keys-fix": "^1.1.2",
		"eslint-plugin-testcafe": "^0.2.1",
		"eslint-plugin-testing-library": "^5.0.0",
		"eslint-plugin-unicorn": "^38.0.1",
		"eslint-plugin-unused-imports": "^2.0.0",
		"microtime": "^3.0.0",
		"prettier": "^2.4.1",
		"rimraf": "^3.0.2",
		"tsm": "^2.1.4",
		"typescript": "^4.5.0",
		"uvu": "^0.5.2",
		"watchlist": "~0.3.1",
		"wif": "^2.0.6"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"engineStrict": true
}
